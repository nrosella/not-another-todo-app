<%# unless Rails.env.test? %>
  <%#= stylesheet_link_tag    "application", :media => "all" %>
<%# end %>
<div class="container">
  <div class="col-md-12 col-lg-12">
    <div class="">
      <h1>Sign up</h1>
    </div>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: "form-group") do |f| %>
      <%= devise_error_messages! %>

      <div class="">
        <%#= f.label "First Name" %>
        <%= f.text_field :name, autofocus: true, placeholder: "First Name", class: "form-control" %>
      </div>

      <div class="">
        <%#= f.label "Last Name" %>
        <%= f.text_field :last_name, autofocus: true, placeholder: "Last Name", class: "form-control" %>
      </div>

      <div class="">
        <%#= f.label :email %>
        <%= f.email_field :email, autofocus: true, placeholder: "Email", class: "form-control" %>
      </div>

      <div class="">
        <%#= f.label :password %>
        <% if @minimum_password_length %>
        
        <% end %>
        <%= f.password_field :password, autocomplete: "off", placeholder: "Password (Min 8 characters)", class: "form-control" %>
      </div>

      <div class="">
        <%#= f.label :password_confirmation, 'Password Confirmation' %>
        <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Confirm Password", class: "form-control" %>
      </div>
      <br>
      <div class="">
        <%= f.submit "Sign Up", class: "btn btn-lg btn-success" %>
      </div><br >
      <p id="spam-disclaimer">*Spam is hateful so I promise never to send you any</p>
    <% end %>
      <%= render "devise/shared/links" %>
  </div>
</div>