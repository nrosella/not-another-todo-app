<br>
<% unless Rails.env.test? %>
  <%= stylesheet_link_tag    "application", :media => "all" %>
<% end %>

<div class="col-lg-6 col-lg-offset-3">
<div class="col-md-12 text-center">
  <h1>Sign up</h1>
</div>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: "form-horizontal", id: "contactForm") do |f| %>
  <%= devise_error_messages! %>

  <div class="form-group col-xs-12 floating-label-form-group controls">
    <%= f.label :name %><br />
    <%= f.text_field :name, autofocus: true, placeholder: "Name", class: "form-control" %>
  </div>

  <div class="form-group col-xs-12 floating-label-form-group controls">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, placeholder: "Email", class: "form-control" %>
  </div>

  <div class="form-group col-xs-12 floating-label-form-group controls">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off", placeholder: "Password (Minimum 8 characters)", class: "form-control" %>
  </div>

  <div class="form-group col-xs-12 floating-label-form-group controls">
    <%= f.label :password_confirmation, 'Password Confirmation' %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Confirm Password", class: "form-control" %>
  </div>
  <br>
  <div class="actions">
    <%= f.submit "Sign Up", class: "btn btn-success btn-lg", id: "signup-button"  %>
  </div>
<% end %>
  <%= render "devise/shared/links" %>
</div>
